<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo de la luna (círculo completo) -->
    <item>
        <shape>
            <solid android:color="#F0F0F0"/> <!-- Color de fondo gris claro para la luna -->
            <size android:width="100dp" android:height="100dp"/>
            <corners android:radius="50dp"/> <!-- Hacerlo redondo -->
        </shape>
    </item>

    <!-- Sombra (parte de la luna que está menguando) -->
    <item android:left="30dp" android:top="0dp">
        <shape>
            <solid android:color="#450D52"/> <!-- Color azul para la sombra -->
            <size android:width="70dp" android:height="100dp"/>
            <corners android:radius="50dp"/>
        </shape>
    </item>
</layer-list>
